<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:db="urn:import:pt.scalablesolutions.client.ui.datebox"
             xmlns:ed="urn:import:pt.scalablesolutions.client.ui.editor"
        >
    <g:HTMLPanel>
        <div>
            Name:
            <ed:ValueBoxEditorDecorator ui:field="name">
                <ed:valuebox>
                    <g:TextBox/>
                </ed:valuebox>
            </ed:ValueBoxEditorDecorator>
        </div>
        <div>
            Password:
            <ed:ValueBoxEditorDecorator ui:field="password">
                <ed:valuebox>
                    <g:PasswordTextBox/>
                </ed:valuebox>
            </ed:ValueBoxEditorDecorator>
        </div>
        <div>
            Verify Password:
            <ed:ValueBoxEditorDecorator ui:field="passwordVerify">
                <ed:valuebox>
                    <g:PasswordTextBox/>
                </ed:valuebox>
            </ed:ValueBoxEditorDecorator>
        </div>
        <div>
            Age:
            <ed:ValueBoxEditorDecorator ui:field="age">
                <ed:valuebox>
                    <g:IntegerBox/>
                </ed:valuebox>
            </ed:ValueBoxEditorDecorator>
        </div>
        <div>
            Birth Date:
            <ed:ValueBoxEditorDecorator ui:field="birthDate">
                <ed:valuebox>
                    <db:DateBox/>
                </ed:valuebox>
            </ed:ValueBoxEditorDecorator>
        </div>
        <div>
            <g:Button text="Save" ui:field="save"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
